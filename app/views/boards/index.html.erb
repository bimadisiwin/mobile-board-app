<h1>掲示板</h1>
<% if flash[:notice] %>
  <div><%= flash[:notice] %></div>
<% end %>
<%= link_to '新規作成', new_board_path %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= board.title %></td>
        <td><%= board.name %></td>
        <td><%= board.updated_at.strftime('%Y/%m/%-d %I:%M%p') %></td>
        <td><%= link_to '詳細', board %></td>
        <td><%= link_to 'x', board, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>

</table>
